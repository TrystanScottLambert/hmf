model {

  # ---- Priors ----
  xstar  ~ dnorm(14.3, 1/0.5^2)
  log_phi ~ dnorm(-3, 1/2^2)
  alpha  ~ dnorm(-1.8, 1/0.5^2)
  beta   ~ dnorm(0.7, 1/0.3^2)

  phi <- pow(10, log_phi)

  for (i in 1:N) {

    # MRP prediction (log10 form)
    model_y[i] <-
        log(beta)
      + log(log(10))
      + log_phi
      + (alpha+1)*(x[i] - xstar)
      - pow(10, beta*(x[i] - xstar)) / log(10)

    # Gaussian likelihood
    y[i] ~ dnorm(model_y[i], tau[i])
  }
}

